{% extends 'connect.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<form method="post">

		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<!-- [ auth-signup ] start -->
		<div class="auth-wrapper auth-v3">
			<div class="auth-content">
				<div class="card">
					<div class="row align-items-stretch text-center">
						<div class="col-md-6 img-card-side">
							<img src=" {{ asset('custom/images/auth/auth-side1.jpg') }} " alt="" class="img-fluid">
							<div class="img-card-side-content">
								<img src=" {{ asset('custom/images/logo-dark.svg') }} " alt="" class="img-fluid">
							</div>
						</div>
						<div class="col-md-6">
							<div class="card-body">
								<div class="text-left">
									<h4 class="mb-3 f-w-600">Bienvenue sur
										<span class="text-primary">Maintenance</span>
									</h4>
									<p class="text-muted mb-4">Votre ERP au quotidien !</p>
								</div>
								<div class="">
									<div class="input-group mb-3">
										<span class="input-group-text">
											<i data-feather="mail"></i>
										</span>
										<input type="email" class="form-control" placeholder="Adresse Email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
									</div>
									<div class="input-group mb-4">
										<span class="input-group-text">
											<i data-feather="lock"></i>
										</span>
										<input type="password" class="form-control" placeholder="Mot de passe" name="password" id="inputPassword" autocomplete="current-password" required>
										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									</div>
									{#
									<div class="form-group text-left my-2">
										<div class="float-right">
											<a href="#!" class="text-primary"><span>J'ai oubli√© mon mot de passe</span></a>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
											<label class="form-check-label" for="flexCheckChecked">
												Souvient toi de moi!
											</label>
										</div>
									</div>
									#}
								</div>
								<div class="text-right">
									{#<button class="btn btn-light-primary mt-2">Effacer</button>#}
									<button class="btn btn-primary mt-2">Je me connecte</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- [ auth-signup ] end -->
		
	</form>

{% endblock %}
